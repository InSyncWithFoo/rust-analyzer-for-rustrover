<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
	<!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
	<id>insyncwithfoo.rustanalyzer</id>
	
	<!-- Public plugin name should be written in Title Case.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
	<!--suppress PluginXmlCapitalization -->
	<name>Rust Analyzer</name>
	
	<!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
	<vendor email="insyncwithfoo@gmail.com" url="https://github.com/InSyncWithFoo">InSync</vendor>
	
	<!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
		 Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
		 Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
	<!-- <description><![CDATA[]]></description> -->
	
	<!-- Product and plugin compatibility requirements.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
	<depends>com.intellij.modules.lang</depends>
	<depends>com.intellij.modules.platform</depends>
	<depends>com.intellij.modules.json</depends>
	
	<depends optional="true" config-file="lsp4ij.xml">com.redhat.devtools.lsp4ij</depends>
	<depends optional="true" config-file="ultimate.xml">com.intellij.modules.ultimate</depends>
	
	<!-- <resource-bundle>messages.rustanalyzer</resource-bundle> -->
	
	<!-- Extension points defined by the plugin.
		 Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
	<extensions defaultExtensionNs="com.intellij">
		<applicationConfigurable
			id="insyncwithfoo.rustanalyzer.configurations.Global"
			parentId="tools"
			bundle="messages.rustanalyzer"
			key="configurations.displayName"
			instance="insyncwithfoo.rustanalyzer.configurations.RAConfigurable"
		/>
		
		<projectConfigurable
			id="insyncwithfoo.rustanalyzer.configurations.Local"
			parentId="insyncwithfoo.rustanalyzer.configurations.Global"
			bundle="messages.rustanalyzer"
			key="configurations.project.displayName"
			instance="insyncwithfoo.rustanalyzer.configurations.RAProjectConfigurable"
		/>
	</extensions>
	
	<extensions defaultExtensionNs="com.intellij">
		<notificationGroup
			id="insyncwithfoo.rustanalyzer.errors"
			displayType="STICKY_BALLOON"
			bundle="messages.rustanalyzer"
			key="notifications.group.errors.displayName"
		/>
		
		<notificationGroup
			id="insyncwithfoo.rustanalyzer.information"
			displayType="BALLOON"
			bundle="messages.rustanalyzer"
			key="notifications.group.information.displayName"
		/>
	</extensions>
	
	<extensions defaultExtensionNs="com.intellij">
		<postStartupActivity
			id="insyncwithfoo.rustanalyzer.configurationfile.CacheRRRASchema"
			implementation="insyncwithfoo.rustanalyzer.configurationfile.CacheRRRASchema"
		/>
		
		<fileIconProvider
			id="insyncwithfoo.rustanalyzer.configurationfile.RRRAFileIconProvider"
			implementation="insyncwithfoo.rustanalyzer.configurationfile.RRRAFileIconProvider"
		/>
	</extensions>
	
	<extensions defaultExtensionNs="JavaScript">
		<JsonSchema.ProviderFactory
			id="insyncwithfoo.rustanalyzer.configurationfile.RRRASchemaProviderFactory"
			implementation="insyncwithfoo.rustanalyzer.configurationfile.RRRASchemaProviderFactory"
		/>
	</extensions>
	
	<actions>
		<!--suppress PluginXmlCapitalization -->
		<action
			id="insyncwithfoo.rustanalyzer.configurationfile.RefreshRRRASchemaCache"
			class="insyncwithfoo.rustanalyzer.configurationfile.RefreshRRRASchemaCache"
			text="Rust Analyzer: Clear schema cache"
			icon="AllIcons.Actions.Refresh"
		/>
	</actions>
</idea-plugin>
